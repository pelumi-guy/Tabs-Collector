{
    "manifest_version": 3,
    "name": "Tabs Collector",
    "description": "A Chrome Extension designed to help you manage and organize multiple open tabs, categorizing them for easier navigation and control.",
    "icons": {
        "128": "/images/icon-128x128.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon-16x16.png",
            "32": "/images/icon-32x32.png",
            "128": "/images/icon-128x128.png"
        }

    },

    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "tabGroups",
        "storage"
    ],
    "version": "1.0.0"
}